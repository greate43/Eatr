<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.greate43.eatr.activities.AddFoodItemActivity">

    <ImageView
        android:id="@+id/activity_add_food_item_image_view_choose_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:background="@android:color/darker_gray"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_add_food_item_til_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/activity_add_food_item_image_view_choose_image"
        app:layout_constraintStart_toStartOf="@+id/activity_add_food_item_image_view_choose_image"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_add_food_item_edit_text_dish_name"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/name_of_the_dish"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="192dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_add_food_item_til_cuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/activity_add_food_item_til_dish_name"
        app:layout_constraintStart_toStartOf="@+id/activity_add_food_item_til_dish_name"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_food_item_til_dish_name">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_add_food_item_edit_text_cuisine"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="cuisine (e.g Rice)"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="246dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_add_food_item_til_expiry_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/activity_add_food_item_til_cuisine"
        app:layout_constraintStart_toStartOf="@+id/activity_add_food_item_til_cuisine"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_food_item_til_cuisine">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_add_food_item_edit_text_expiry_time"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Expiry time in hr "
            android:inputType="number"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="299dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/activity_add_food_item_button_get_location"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Get Location"
        app:layout_constraintEnd_toEndOf="@+id/activity_add_food_item_til_expiry_time"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_food_item_til_expiry_time"
        android:layout_marginRight="8dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_add_food_item_til_pick_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/activity_add_food_item_til_expiry_time"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_food_item_til_expiry_time">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_add_food_item_edit_text_pick_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Pick Up Location"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/activity_add_food_item_til_pick_location"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_food_item_til_pick_location" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/activity_add_food_item_button_share_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Share Food"
        app:layout_constraintEnd_toEndOf="@+id/activity_add_food_item_button_get_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_food_item_til_pick_location" />

</android.support.constraint.ConstraintLayout>
