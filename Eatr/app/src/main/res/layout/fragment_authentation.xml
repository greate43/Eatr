<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.greate43.eatr.fragments.AuthenticationFragment">


    <ImageView
        android:id="@+id/fragment_authemtation_app_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bg_sample_tag"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <Button
        android:id="@+id/fragment_authentication_button_open_phone_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Phone No Authentication"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fragment_authemtation_app_logo"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/fragment_authentation_button_google_auth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Google Authentication"
        app:layout_constraintEnd_toEndOf="@+id/fragment_authentication_button_open_phone_auth"
        app:layout_constraintStart_toStartOf="@+id/fragment_authentication_button_open_phone_auth"
        app:layout_constraintTop_toBottomOf="@+id/fragment_authentication_button_open_phone_auth" />
</android.support.constraint.ConstraintLayout>
