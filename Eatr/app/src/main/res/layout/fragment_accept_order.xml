<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.greate43.eatr.fragments.AcceptOrderFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/fragment_accept_order_button_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="NO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fragment_accept_order_button_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/fragment_accept_order_image_view_food_pic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_sample_tag"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/fragment_accept_order_text_view_who_wants_to_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragment_accept_order_button_no"
        app:layout_constraintEnd_toEndOf="@+id/fragment_accept_order_image_view_food_pic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_accept_order_text_view_no_of_servings"
        tools:text="Do You want to accept order?" />

    <TextView
        android:id="@+id/fragment_accept_order_text_view_dish_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fragment_accept_order_image_view_food_pic"
        app:layout_constraintStart_toStartOf="@+id/fragment_accept_order_image_view_food_pic"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        tools:text="Alooo" />

    <TextView
        android:id="@+id/fragment_accept_order_text_view_no_of_servings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="No Of Servings :"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/fragment_accept_order_text_view_dish_name"
        app:layout_constraintTop_toBottomOf="@+id/fragment_accept_order_text_view_dish_name" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_accept_order_text_view_dish_name"
        app:layout_constraintStart_toEndOf="@+id/fragment_accept_order_text_view_no_of_servings"
        app:layout_constraintTop_toBottomOf="@+id/fragment_accept_order_text_view_dish_name"
        tools:text="4" />
</android.support.constraint.ConstraintLayout>
